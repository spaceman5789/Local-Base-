{
  "id": null,
  "uid": "postgres-overview-local",
  "title": "PostgreSQL Overview",
  "tags": ["postgres", "local"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "stat",
      "title": "Postgres Exporter Up",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "up{job=\"postgres_exporter\"}", "legendFormat": "status", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": { "mode": "absolute", "steps": [ { "color": "red", "value": 0 }, { "color": "green", "value": 1 } ] }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "DB Connections",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
      "targets": [
        { "expr": "sum(pg_stat_database_numbackends)", "legendFormat": "connections", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Commits/s",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        { "expr": "sum(rate(pg_stat_database_xact_commit[5m]))", "legendFormat": "commit/s", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Rollbacks/s",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        { "expr": "sum(rate(pg_stat_database_xact_rollback[5m]))", "legendFormat": "rollback/s", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Database Size",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "targets": [
        { "expr": "sum(pg_database_size_bytes)", "legendFormat": "bytes", "refId": "A" }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
